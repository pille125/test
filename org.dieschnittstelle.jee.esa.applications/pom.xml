<project xmlns="http://maven.apache.org/POM/4.0.0"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://maven.apache.org/POM/4.0.0
    http://maven.apache.org/maven-v4_0_0.xsd">
    <modelVersion>4.0.0</modelVersion>
    
    <groupId>org.dieschnittstelle.jee.esa</groupId>
    <artifactId>build-all-modules</artifactId>
    <packaging>pom</packaging>
    <version>1.0</version>

    <build>
        <plugins>
            <plugin>
                <artifactId>maven-compiler-plugin</artifactId>
                <version>3.3</version>
                <configuration>
                    <source>1.8</source>
                    <target>1.8</target>
                </configuration>
            </plugin>
        </plugins>
    </build>

    <modules>
        <module>../org.dieschnittstelle.jee.esa.bas</module>
        <module>../org.dieschnittstelle.jee.esa.lib.utils</module>
        <module>../org.dieschnittstelle.jee.esa.lib.entities.erp</module>
        <module>../org.dieschnittstelle.jee.esa.lib.entities.crm</module>
        <module>../org.dieschnittstelle.jee.esa.ser</module>
        <module>../org.dieschnittstelle.jee.esa.ser.client</module>
        <module>../org.dieschnittstelle.jee.esa.jrs.api</module>
        <module>../org.dieschnittstelle.jee.esa.jrs</module>
        <module>../org.dieschnittstelle.jee.esa.jrs.client</module>
        <module>../org.dieschnittstelle.jee.esa.jws</module>
        <!-- this needs to be commented out as creation will fail as long as the server is not running
        <module>../org.dieschnittstelle.jee.esa.jws.client</module> -->
        <module>../org.dieschnittstelle.jee.esa.ejb.ejbmodule.erp</module>
        <module>../org.dieschnittstelle.jee.esa.ejb.ejbmodule.crm</module>
        <module>../org.dieschnittstelle.jee.esa.ejb.webapp</module>
        <!--<module>../org.dieschnittstelle.jee.esa.ejbjrs.client</module>-->
        <module>../org.dieschnittstelle.jee.esa.ejb</module>
        <module>../org.dieschnittstelle.jee.esa.ejb.client</module>
        <module>../org.dieschnittstelle.jee.esa.jsf</module>
        <module>../org.dieschnittstelle.jee.esa.jsf.cdi</module>
        <!-- code skeletons -->
        <module>../org.dieschnittstelle.jee.esa.ue.jws4</module>
        <!-- this needs to be commented out as creation will fail as long as jws4 has not been realised and the server is not running
        <module>../org.dieschnittstelle.jee.esa.ue.jws5</module> -->
        <module>../org.dieschnittstelle.jee.esa.ue.jsf5</module>
    </modules>
    
</project>